<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    x:Class="MauiTheming.Resources.Theme.DarkTheme"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Colors  -->
    <Color x:Key="TextPrimary">#CCFFFFFF</Color>
    <Color x:Key="TextSecondary">#80FFFFFF</Color>
    <Color x:Key="IconForeground">#E6FFFFFF</Color>
    <Color x:Key="IconBackground">#66FFFFFF</Color>
    <Color x:Key="BackgroundBase">#FF000000</Color>
    <Color x:Key="BackgroundElevated">#FF181818</Color>
    <Color x:Key="CursorBackground">#FF0069B4</Color>
    <Color x:Key="CursorForeground">#FFFDFDFD</Color>
    <Color x:Key="Separator">#FF252525</Color>
    <Color x:Key="PipelineAir">#805EE9FF</Color>
    <Color x:Key="PipelineGas">#80FFD000</Color>
    <Color x:Key="ErrorBackground">#FFFF1100</Color>
    <Color x:Key="ErrorTextPrimary">#FFFFFFFF</Color>
    <Color x:Key="ErrorTextSecondary">#80FFFFFF</Color>
    <Color x:Key="SuccessBackground">#FF00C800</Color>
    <Color x:Key="SmokeOverlay">#80000000</Color>
    <Color x:Key="ModifiedValueColor">#FF6F6FFF</Color>

    <!--  Imagery  -->
    <x:String x:Key="DotnetBotImage">dotnet_bot_dark.png</x:String>

    <!--  Brushes  -->
    <LinearGradientBrush x:Key="ButtonGradient">
        <GradientStop Offset="0.0" Color="#FF3A3A3A" />
        <GradientStop Offset="1.0" Color="#FF121212" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BackgroundGradient">
        <GradientStop Offset="0.0" Color="#FF000000" />
        <GradientStop Offset="1.0" Color="#FF181818" />
    </LinearGradientBrush>

</ResourceDictionary>